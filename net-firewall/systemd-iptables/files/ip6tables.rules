*filter

:INPUT   DROP   [0:0]
:FORWARD ACCEPT [0:0]
:OUTPUT  ACCEPT [0:0]

-A INPUT -i lo -j ACCEPT

-A INPUT -p icmpv6 -j LOG --log-prefix "ping: "
-A INPUT -p icmpv6 -j ACCEPT

-A INPUT -m state --state RELATED,ESTABLISHED -j ACCEPT

-A INPUT -m state --state NEW -j LOG --log-prefix "blocked: "

COMMIT
