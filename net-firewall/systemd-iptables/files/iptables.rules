*filter

:INPUT DROP     [0:0]
:FORWARD ACCEPT [0:0]
:OUTPUT ACCEPT  [0:0]

-A INPUT -i lo -j ACCEPT

-A INPUT -p tcp -m state --state NEW --dport 22 -j LOG --log-prefix "ssh[in]: "
-A INPUT -p tcp -m state --state NEW --dport 22 -j ACCEPT

-A INPUT -m state --state RELATED,ESTABLISHED -j ACCEPT

COMMIT
